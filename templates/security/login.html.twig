{% extends 'base.html.twig' %}

{% block title %}
	{{'Login.Title'| trans()}}
{% endblock %}

{% block body %}
	<form class="container col-12 col-md-8 col-lg-6 col-xl-5 " method="post">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3">
                <p>{{'Login.As' . app.user.userIdentifier | trans()  }}</p>
				<a href="{{ path('app_logout') }}">{{'Login.Logout' | trans()}}</a>
			</div>
		{% endif %}

		<h1 class="h3 mb-3 font-weight-normal">{{'Login.H1' | trans()}}</h1>

		<div class="form-outline form-white mb-4">
			<label class="form-label" for="inputEmail">{{'Login.Email' | trans() }}</label>
			<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
		</div>

		<div class="form-outline form-white mb-4">
			<label class="form-label" for="inputPassword">{{'Login.Password'| trans()}}</label>
			<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
		</div>

		<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

		<button class="btn btn-lg btn-primary" type="submit">{{'Login.Sign' | trans()}}</button>
	</form>
{% endblock %}
