{% extends 'base.html.twig' %}

{% block header_title %}
	<header class="container">
		<h1 class="display-1 text-center">Bienvenue sur Todo List</h1>
		<p class="lead text-center">L'application qui simplifie la gestion de vos tâches au quotidien</p>
	</header>
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-md-4">
			<a href="{{ path('task_create') }}" class="btn btn-success">Créer une nouvelle tâche</a>
		</div>
		<div class="col-md-4">
			<a href="{{ path('task_list') }}" class="btn btn-primary">Consulter la liste des tâches à faire</a>
		</div>
		<div class="col-md-4">
			<a href="{{ path('task_list') }}" class="btn btn-secondary">Consulter la liste des tâches terminées</a>
		</div>
	</div>
{% endblock %}
